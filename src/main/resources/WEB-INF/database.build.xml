<?xml version="1.0"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:sf="antlib:com.salesforce">

    <path id="jdbc.driver">
        <file file="lib/sqljdbc4-4.0.jar"/>
    </path>

    <path id="runtime.path">
        <fileset dir="lib/runtime">
            <include name="*.jar"/>
        </fileset>
    </path>

    <property refid="jdbc.driver" name="driver"/>

    <target name="db-install">
        <java classname="com.softserve.entity.generator.config.database.init.DatabaseInitializer">

            <classpath refid="runtime.path"/>
            <classpath refid="jdbc.driver"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
            </classpath>
        </java>
    </target>

</project>
