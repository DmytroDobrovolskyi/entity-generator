<?xml version="1.0"?>
<project name="entity-generator" default="run">

    <property file="build.properties"/>

    <target name="run" depends="pack">
        <java classname="com.softserve.entity.generator.Main">
            <classpath>
                <fileset dir="${build.dir}">
                    <include name="/*.jar"/>
                </fileset>
            </classpath>
        </java>
    </target>

    <target name="pack" depends="compile">
        <jar jarfile="${build.dir}/${ant.project.name}.jar" basedir="${compile.dir}">
            <manifest>
                <attribute name="Main-Class" value="com.softserve.entity.generator.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" destdir="${compile.dir}"/>
    </target>

    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${compile.dir}"/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

</project>
