<?xml version="1.0"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:sf="antlib:com.salesforce" name="entity-generator">

    <property file="build.properties"/>
    <property file="soap.properties"/>
    <property file="${sf.resources}/sf.credentials.properties"/>
    <property name="soap.partner" value="${lib.dir}/partner.jar"/>
    <property name="soap.apex" value="${lib.dir}/apex.jar"/>
    <property name="soap.enterprise" value="${lib.dir}/enterprise.jar"/>
    <property name="soap.wsc" value="${lib.dir}/force-wsc-34.2.0-uber.jar"/>
    <property name="jdbc.driver" value="${lib.dir}/sqljdbc4-4.0.jar"/>
    <property name="compile.dir" value="${lib.dir}/compile"/>
    <property name="runtime.dir" value="${lib.dir}/runtime"/>

    <import file="${resources.dir}/database.build.xml"/>
    <import file="${sf.resources}/sf.build.xml"/>
    <import file="${sf.resources}/sf.purge.build.xml"/>

    <path id="runtime.path">
        <fileset dir="${runtime.dir}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <path id="compile.path">
        <fileset dir="${compile.dir}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="run">
        <java classname="com.softserve.entity.generator.Main">

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${jdbc.driver}"/>
                <pathelement location="${soap.partner}"/>
                <pathelement location="${soap.wsc}"/>
            </classpath>
        </java>
    </target>

    <target name="install" depends="test">
        <jar jarfile="${build.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="com.softserve.entity.generator.Main"/>
            </manifest>
            <fileset dir="${resources.dir}"/>
        </jar>
    </target>

    <target name="test" depends="compile">

        <junit printsummary="yes" haltonfailure="true">

            <classpath refid="test.path"/>

            <classpath>
                <pathelement location="${test.classes.dir}"/>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${jdbc.driver}"/>
                <pathelement location="${soap.partner}"/>
                <pathelement location="${soap.apex}"/>
                <pathelement location="${soap.enterprise}"/>
                <pathelement location="${soap.wsc}"/>
            </classpath>

            <formatter type="plain" usefile="false"/>

            <batchtest fork="yes">
                <fileset dir="${test.src.dir}">
                    <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>

        </junit>
    </target>

    <target name="compile" depends="init, resolve">
        <javac srcdir="${main.src.dir}" destdir="${main.classes.dir}" includeantruntime="false">
            <classpath refid="compile.path"/>
            <classpath path="${main.classes.dir}"/>
            <classpath>
                <pathelement location="${soap.partner}"/>
                <pathelement location="${soap.apex}"/>
                <pathelement location="${soap.enterprise}"/>
                <pathelement location="${soap.wsc}"/>
            </classpath>
        </javac>

        <javac srcdir="${test.src.dir}" destdir="${test.classes.dir}" includeantruntime="false">
            <classpath refid="test.path"/>
            <classpath path="${main.classes.dir}"/>


        </javac>
    </target>

    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${main.classes.dir}"/>
        <mkdir dir="${test.classes.dir}"/>
    </target>

    <target name="resolve">
        <ivy:retrieve pattern="lib/[conf]/[artifact]-[revision](-[classifier]).[ext]"/>

        <ivy:cachepath pathid="compile.path" conf="compile"/>
        <ivy:cachepath pathid="runtime.path" conf="runtime"/>
        <ivy:cachepath pathid="test.path" conf="test"/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete>
            <fileset dir=".">
                <include name="*.log"/>
            </fileset>
        </delete>
    </target>

    <target name="save-entities">
        <java classname="com.softserve.entity.generator.app.EntitySaver">

            <arg line="${command.line.args}"/>

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${jdbc.driver}"/>
                <pathelement location="${soap.partner}"/>
                <pathelement location="${soap.wsc}"/>
            </classpath>
        </java>
    </target>

    <target name="generate-entities">
        <java classname="com.softserve.entity.generator.app.EntityGenerator">

            <arg line="${command.line.args}"/>

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${jdbc.driver}"/>
                <pathelement location="${soap.partner}"/>
                <pathelement location="${soap.apex}"/>
                <pathelement location="${soap.wsc}"/>
            </classpath>
        </java>
    </target>
</project>
