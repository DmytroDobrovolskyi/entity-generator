<?xml version="1.0"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" name="entity-generator" default="run">

    <property file="build.properties"/>

    <target name="run">
        <java classname="com.softserve.entity.generator.Main">
            <classpath>
                <fileset dir="${build.dir}">
                    <include name="/*.jar"/>
                </fileset>

                <fileset dir="${lib.dir}">
                    <include name="/*.jar"/>
                </fileset>
            </classpath>
        </java>
    </target>

    <target name="pack" depends="compile">
        <jar jarfile="${build.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="com.softserve.entity.generator.Main"/>
            </manifest>
            <fileset dir="${resources.dir}"/>
        </jar>
    </target>

    <target name="compile" depends="init, resolve">
        <javac srcdir="${src.dir}" destdir="${classes.dir}" includeantruntime="false">
            <classpath>
                <fileset dir="${lib.dir}">
                    <include name="/*.jar"/>
                </fileset>
            </classpath>
        </javac>
    </target>

    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${classes.dir}"/>
    </target>

    <target name="resolve">
        <ivy:retrieve/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>

</project>
