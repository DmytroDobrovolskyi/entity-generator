<?xml version="1.0"?>
<project xmlns:ivy="antlib:org.apache.ivy.ant" xmlns:sf="antlib:com.salesforce" name="entity-generator" default="run">

    <property file="build.properties"/>
    <property file="salesforce.credentials.properties"/>

    <target name="run" depends="install">
        <java classname="com.softserve.entity.generator.Main">

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${lib.dir}/sqljdbc4-4.0.jar"/>
            </classpath>
        </java>
    </target>

    <target name="install" depends="test">
        <jar jarfile="${build.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
            <manifest>
                <attribute name="Main-Class" value="com.softserve.entity.generator.Main"/>
            </manifest>
            <fileset dir="${resources.dir}"/>
        </jar>
    </target>

    <target name="test" depends="compile">

        <junit printsummary="yes" haltonfailure="true">

            <classpath refid="test.path"/>

            <classpath>
                <pathelement location="${test.classes.dir}"/>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${lib.dir}/sqljdbc4-4.0.jar"/>
            </classpath>

            <formatter type="plain" usefile="false"/>

            <batchtest fork="yes">
                <fileset dir="${test.src.dir}">
                    <include name="**/*Test*.java"/>
                </fileset>
            </batchtest>

        </junit>
    </target>

    <target name="compile" depends="init, resolve">
        <javac srcdir="${main.src.dir}" destdir="${main.classes.dir}" includeantruntime="false">
            <classpath refid="compile.path"/>
        </javac>

        <javac srcdir="${test.src.dir}" destdir="${test.classes.dir}" includeantruntime="false">
            <classpath refid="test.path"/>
            <classpath path="${main.classes.dir}"/>
        </javac>
    </target>

    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${main.classes.dir}"/>
        <mkdir dir="${test.classes.dir}"/>
    </target>

    <target name="resolve">
        <ivy:retrieve pattern="lib/[conf]/[artifact]-[revision](-[classifier]).[ext]"/>

        <ivy:cachepath pathid="compile.path" conf="compile"/>
        <ivy:cachepath pathid="runtime.path" conf="runtime"/>
        <ivy:cachepath pathid="test.path" conf="test"/>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete>
            <fileset dir=".">
                <include name="*.log"/>
            </fileset>
        </delete>
    </target>

    <target name="db-init" depends="compile">
        <java classname="com.softserve.entity.generator.config.database.init.DatabaseInitializer">

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${lib.dir}/sqljdbc4-4.0.jar"/>
            </classpath>
        </java>
    </target>

    <target name="db-clean" depends="compile">
        <java classname="com.softserve.entity.generator.config.database.init.DatabaseCleaner">

            <classpath refid="runtime.path"/>

            <classpath>
                <pathelement location="${main.classes.dir}"/>
                <pathelement location="${resources.dir}"/>
                <pathelement location="${lib.dir}/sqljdbc4-4.0.jar"/>
            </classpath>
        </java>
    </target>


    <target name="sf-receive">
        <mkdir dir="${sf.metadata.dir}"/>
        <sf:retrieve username="${sf.src.username}"
                     password="${sf.src.password}"
                     serverurl="${sf.src.serverurl}"
                     maxPoll="${sf.maxPoll}"
                     unpackaged="${sf.receive.dir}/package.xml"
                     retrieveTarget="${sf.metadata.dir}"/>
    </target>

    <target name="sf-deploy">
        <sf:deploy username="${sf.dest.username}"
                   password="${sf.dest.password}"
                   serverurl="${sf.dest.serverurl}"
                   maxPoll="${sf.maxPoll}"
                   deployRoot="${sf.metadata.dir}"/>
    </target>

    <target name="sf-clean">
        <delete dir="${sf.metadata.dir}"/>
    </target>

</project>
